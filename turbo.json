{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".vinxi/**", ".output/**", ".vercel/**"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "cache": false
    },
    "format": {
      "dependsOn": ["^format"],
      "cache": false
    },
    "ci:lint": {
      "dependsOn": ["^ci:lint"]
    },
    "ci:format": {
      "dependsOn": ["^ci:format"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "registry": {
      "cache": false,
      "persistent": true
    }
  }
}

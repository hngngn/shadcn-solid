{
  "$schema": "https://shadcn-solid.com/schema/registry-item.json",
  "name": "combobox-multi-demo",
  "type": "registry:example",
  "files": [
    {
      "path": "src/examples/combobox-multi-demo.tsx",
      "content": "import { For } from \"solid-js\"\n\nimport { Badge } from \"@repo/tailwindcss/ui/v4/badge\"\nimport {\n  Combobox,\n  ComboboxContent,\n  ComboboxControl,\n  ComboboxDescription,\n  ComboboxInput,\n  ComboboxItem,\n  ComboboxItemLabel,\n  ComboboxPortal,\n  ComboboxTrigger,\n} from \"@repo/tailwindcss/ui/v4/combobox\"\n\nconst ALL_OPTIONS = [\"Apple\", \"Banana\", \"Blueberry\", \"Grapes\", \"Pineapple\"]\n\nconst ComboboxMultiDemo = () => {\n  return (\n    <Combobox\n      multiple\n      defaultValue={[\"Apple\"]}\n      options={ALL_OPTIONS}\n      itemComponent={(props) => (\n        <ComboboxItem item={props.item}>\n          <ComboboxItemLabel>{props.item.rawValue}</ComboboxItemLabel>\n        </ComboboxItem>\n      )}\n    >\n      <ComboboxControl<string> class=\"h-full min-h-9 w-full max-w-sm\">\n        {(state) => (\n          <>\n            <div class=\"flex flex-wrap items-center gap-1\">\n              <For each={state.selectedOptions()}>\n                {(option) => (\n                  <Badge class=\"rounded-sm\">\n                    {option}\n                    <button\n                      type=\"button\"\n                      class=\"rounded-full\"\n                      onClick={() => {\n                        state.remove(option)\n                      }}\n                    >\n                      <svg\n                        xmlns=\"http://www.w3.org/2000/svg\"\n                        viewBox=\"0 0 24 24\"\n                        class=\"size-3\"\n                      >\n                        <path\n                          fill=\"none\"\n                          stroke=\"currentColor\"\n                          stroke-linecap=\"round\"\n                          stroke-linejoin=\"round\"\n                          stroke-width=\"2\"\n                          d=\"M18 6L6 18M6 6l12 12\"\n                        />\n                      </svg>\n                    </button>\n                  </Badge>\n                )}\n              </For>\n              <ComboboxInput />\n            </div>\n            <ComboboxTrigger />\n          </>\n        )}\n      </ComboboxControl>\n      <ComboboxDescription>\n        Choose the fruit you like the most.\n      </ComboboxDescription>\n      <ComboboxPortal>\n        <ComboboxContent />\n      </ComboboxPortal>\n    </Combobox>\n  )\n}\n\nexport default ComboboxMultiDemo\n",
      "type": "registry:example"
    }
  ]
}
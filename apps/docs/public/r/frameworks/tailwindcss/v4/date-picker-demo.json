      "path": "src/examples/date-picker-demo.tsx",
      "content": "import { Index, Show, createSignal } from \"solid-js\"\n\nimport { Button } from \"@repo/tailwindcss/ui/v4/button\"\nimport {\n  Calendar,\n  CalendarCell,\n  CalendarCellTrigger,\n  CalendarHeadCell,\n  CalendarLabel,\n  CalendarNav,\n  CalendarTable,\n} from \"@repo/tailwindcss/ui/v4/calendar\"\nimport {\n  Popover,\n  PopoverContent,\n  PopoverPortal,\n  PopoverTrigger,\n} from \"@repo/tailwindcss/ui/v4/popover\"\n\nconst { format: formatWeekdayLong } = new Intl.DateTimeFormat(\"en\", {\n  weekday: \"long\",\n})\nconst { format: formatWeekdayShort } = new Intl.DateTimeFormat(\"en\", {\n  weekday: \"short\",\n})\nconst { format: formatMonth } = new Intl.DateTimeFormat(\"en\", {\n  month: \"long\",\n})\nconst { format: formatTrigger } = new Intl.DateTimeFormat(\"en\", {\n  year: \"numeric\",\n  month: \"long\",\n  day: \"numeric\",\n})\n\nconst DatePickerDemo = () => {\n  const [open, setOpen] = createSignal(false)\n\n  return (\n    <Calendar\n      mode=\"single\"\n      onValueChange={() => {\n        setOpen((prev) => !prev)\n      }}\n    >\n      {(props) => (\n        <Popover open={open()} onOpenChange={setOpen}>\n          <PopoverTrigger<typeof Button>\n            as={(triggerProps) => (\n              <Button\n                variant=\"outline\"\n                id=\"date\"\n                class=\"w-48 justify-between font-normal\"\n                {...triggerProps}\n              >\n                <Show when={props.value} fallback=\"Select date\">\n                  {formatTrigger(props.value!)}\n                </Show>\n                <svg\n                  xmlns=\"http://www.w3.org/2000/svg\"\n                  class=\"size-4\"\n                  viewBox=\"0 0 24 24\"\n                >\n                  <path\n                    fill=\"none\"\n                    stroke=\"currentColor\"\n                    stroke-linecap=\"round\"\n                    stroke-linejoin=\"round\"\n                    stroke-width=\"2\"\n                    d=\"m6 9l6 6l6-6\"\n                  />\n                </svg>\n              </Button>\n            )}\n          />\n          <PopoverPortal>\n            <PopoverContent class=\"w-auto overflow-hidden p-0\">\n              <div class=\"flex flex-col gap-4 rounded-md p-3 shadow-sm\">\n                <div class=\"relative flex w-full items-center justify-between\">\n                  <CalendarNav\n                    action=\"prev-month\"\n                    aria-label=\"Go to previous month\"\n                  />\n                  <CalendarLabel>\n                    {formatMonth(props.month)} {props.month.getFullYear()}\n                  </CalendarLabel>\n                  <CalendarNav\n                    action=\"next-month\"\n                    aria-label=\"Go to next month\"\n                  />\n                </div>\n                <CalendarTable>\n                  <thead>\n                    <tr class=\"flex\">\n                      <Index each={props.weekdays}>\n                        {(weekday) => (\n                          <CalendarHeadCell abbr={formatWeekdayLong(weekday())}>\n                            {formatWeekdayShort(weekday())}\n                          </CalendarHeadCell>\n                        )}\n                      </Index>\n                    </tr>\n                  </thead>\n                  <tbody>\n                    <Index each={props.weeks}>\n                      {(week) => (\n                        <tr class=\"mt-2 flex w-full\">\n                          <Index each={week()}>\n                            {(day) => (\n                              <CalendarCell>\n                                <CalendarCellTrigger\n                                  day={day()}\n                                  class=\"dark:data-[today]:focus-visible:ring-ring/50\"\n                                >\n                                  {day().getDate()}\n                                </CalendarCellTrigger>\n                              </CalendarCell>\n                            )}\n                          </Index>\n                        </tr>\n                      )}\n                    </Index>\n                  </tbody>\n                </CalendarTable>\n              </div>\n            </PopoverContent>\n          </PopoverPortal>\n        </Popover>\n      )}\n    </Calendar>\n  )\n}\n\nexport default DatePickerDemo\n",
      "type": "registry:example"
    }
  ]
}
{
	"compilerOptions": {
		"composite": false,
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"inlineSources": false,
		"moduleResolution": "node",
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"preserveWatchOutput": true,
		"skipLibCheck": true,
		"strict": true,
		"isolatedModules": false,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"]
		},
		"module": "ES2020"
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
